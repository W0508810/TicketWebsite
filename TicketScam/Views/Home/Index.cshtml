@model IEnumerable<TicketScam.Models.Show>

@{
    ViewData["Title"] = "Home - Buy some tix";
}

<!-- Hero Section -->
<section class="hero-section text-center">
    <div class="container">
        <h1 class="display-4 mb-4">Discover a drained bank acct lol</h1>
        <p class="lead mb-4">From concerts to theater, sports to comedy - get scammed for every occasion.</p>
        <a asp-controller="Shows" asp-action="Index" class="btn btn-light btn-lg">Browse All Scams</a>
    </div>
</section>

<!-- Featured Shows -->
<section class="featured-shows">
    <div class="container">
        <h2 class="text-center mb-5">Featured Events</h2>
        <div class="row">
            @foreach (var show in Model.Take(3))
            {
                <div class="col-md-4">
                    <div class="card show-card">
                        <img src="@show.ImageFileName" class="card-img-top" alt="@show.ShowName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@show.ShowName</h5>
                            <p class="card-text text-muted">
                                <i class="fas fa-calendar"></i> @show.ShowDate.ToString("MMM dd, yyyy h:mm tt")<br>
                                <i class="fas fa-map-marker-alt"></i> @(show.Venue is TicketScam.Models.Venue venue ? venue.VenueName : "")
                            </p>
                            <p class="card-text">@show.ShowDescription</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">$@show.TicketPrice</span>
                                <a href="#" class="btn btn-primary">Get Tickets</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Shows" asp-action="Index" class="btn btn-outline-primary">View All Events</a>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                <h4>Secure Booking</h4>
                <p>100% gonna get scammed when you buy tix lol</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-ticket-alt fa-3x text-primary mb-3"></i>
                <h4>Instant Delivery</h4>
                <p>Never receive your tickets</p>
            </div>
            <div class="col-md-4">
                <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                <h4>24/7 Support</h4>
                <p>Our customer service team will not help</p>
            </div>
        </div>
    </div>
</section>
